<section class="section section--alt" id="training">
	<div class="shell">
		<header class="section__head">
			<h1 class="title title--alt" data-text="Training">
				<span>Training</span>
			</h1><!-- /.title -->

			<h3 class="subtitle">Gäste Willkommen!</h3><!-- /.subtitle -->

			<p>
				Du möchtest an einem unserer Trainings teilnehmen? Dann melde dich jetzt für ein<br>
				unverbindliches Probetraining an! Wir freuen uns, dich kennen zu lernen.
			</p>
		</header><!-- /.section__head -->

		<div class="section__body">
			<div class="widget-data">
				<h3 class="widget__title">
					<span>Immer Montags</span>
				</h3><!-- /.widget__title -->

				<ul class="widget__items">
					<li class="widget__item">
						<i class="ico-clock"></i>

						<p>
							22:15 <span class="hidden-mobile">Uhr</span><br>
							-<br>
							23:45 Uhr
						</p>
					</li><!-- /.widget__item -->

					<li class="widget__item">
						<i class="ico-pin"></i>

						<p>
							K2 - Haie Zentrum<br>
							Gummersbacher Str. 4<br>
							50679 Köln
						</p>
					</li><!-- /.widget__item -->

					<li class="widget__item">
						<i class="ico-euro"></i>

						<p>
							Gastbeitrag:
						</p>

						<p>
							17 €
						</p>
					</li><!-- /.widget__item -->
				</ul><!-- /.widget__items -->

				<div class="widget__actions">
					<a href="mailto:info@cologne-smilies.de" class="btn btn--red">
						<span>
							Anmeldung für Gäste

							<i class="ico-arrow"></i>
						</span>
					</a>
				</div><!-- /.widget__actions -->
			</div><!-- /.widget-data -->
		</div><!-- /.section__body -->

		<div class="section__actions" id="kontakt">
			<h3>Noch Fragen?</h3>

			<a href="mailto:info@cologne-smilies.de" class="section__link">info@cologne-smilies.de</a>
		</div><!-- /.section__actions -->
	</div><!-- /.shell -->
</section><!-- /.section -->


