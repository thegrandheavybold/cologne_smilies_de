<section class="section section--secondary" id="saison">
	<img src="assets/images/temp/img1.png" alt="" class="section__image">

	<div class="shell">
		<header class="section__head">
			<h1 class="title" data-text="Saison">
				<span>Saison</span>
			</h1><!-- /.title -->

			<h3 class="subtitle">
				<span>Tabelle</span>
			</h3><!-- /.subtitle -->
		</header><!-- /.section__head -->

		<div class="section__body">
			<div class="tabs js-tabs">
				<div class="tabs__head">
					<nav class="tabs__nav">
						<ul>
							<li class="is-active">
								<a href="#tab1">
									<span>1. Division</span>
								</a>
							</li>

							<li>
								<a href="#tab2">
									<span>2. Division</span>
								</a>
							</li>
						</ul>
					</nav><!-- /.tabs__nav -->
				</div><!-- /.tabs__head -->

				<div class="tabs__body">
					<div class="tab is-active" id="tab1">
						<script type="text/javascript" src="https://www.rheinland-hockey.de/ajax/widget/standings/2"></script>

						<div class="table table--alt js-table" data-title-first="Team" data-title-second="PKT">
							<script type="text/javascript">
								table.print({
									position :false,
									games    :false,
									won      :false,
									lost     :false,
									goals    :false
								});
							</script>
						</div><!-- /.table -->
					</div><!-- /.tab -->

					<div class="tab" id="tab2">
						<script type="text/javascript" src="https://www.rheinland-hockey.de/ajax/widget/standings/3"></script>

						<div class="table js-table" data-title-first="Team" data-title-second="PKT">
							<script type="text/javascript">
								table.print({
									position :false,
									games    :false,
									won      :false,
									lost     :false,
									goals    :false
								});
							</script>
						</div><!-- /.table -->
					</div><!-- /.tab -->
				</div><!-- /.tabs__body -->
			</div><!-- /.tabs js-tabs -->
		</div><!-- /.section__body -->

		<h3 class="subtitle">
			<span>Nächstes Match</span>
		</h3><!-- /.subtitle -->

		<div class="widget-score">
			<div class="widget__item">
				<h2>
					<img src="{{ nextgame.heimteamlogo | url }}" alt="">

					<span>Heim</span>
				</h2>

				<h4>
					<span>{{ nextgame.heimteamname }}</span>
				</h4>
			</div><!-- /.widget__item -->

			<div class="widget__content">
				<h2>
					15

					<span>Mai</span>
				</h2>

				<h5>22:15</h5>
				<span>{{ nextgame.start }}</span>
			</div><!-- /.widget__content -->

			<div class="widget__item widget__item--primary">
				<h2>
					<img src="{{ nextgame.heimteamlogo }}" alt="">

					<span>gast</span>
				</h2>

				<h4>
					<span>{{ nextgame.gastteamname }}</span>
				</h4>
			</div><!-- /.widget__item -->
		</div><!-- /.widget-score -->

		<div class="section__actions">
			<a href="{{ nextgame.mapslink }}" class="btn btn--border">
				<span>
					Google Maps Route

					<i class="ico-arrow"></i>
				</span>
			</a>
		</div><!-- /.section__actions -->
	</div><!-- /.shell -->
</section><!-- /.section -->

